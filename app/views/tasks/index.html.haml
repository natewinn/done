= render partial: 'layouts/nav_bar'

/* Add Task Form */
.top-section
  .row
    .large-6.column.large-centered
      .form
        = form_for @new_task do |task|
          %label Task name
          = task.text_field :name, autofocus: true, placeholder: 'Put your task here'
          %p
          = task.submit 'Add task', class: 'default button'

= render partial: 'to_do'